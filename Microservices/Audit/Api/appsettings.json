{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://cryptojackpot.com",
      "https://www.cryptojackpot.com",
      "https://app.cryptojackpot.com"
    ]
  },
  "MongoDB": {
    "ConnectionString": "mongodb://admin:admin@localhost:27017",
    "DatabaseName": "cryptojackpot_audit",
    "AuditLogsCollection": "audit_logs",
    "RetentionDays": 365
  },
  "JwtSettings": {
    "SecretKey": "super_secret_key_crypto_jackpot_distributed_2025!",
    "Issuer": "CryptoJackpotIdentity",
    "Audience": "CryptoJackpotApp",
    "ExpirationInMinutes": 60
  },
  "Keycloak": {
    "Authority": "http://auth.cryptojackpot.local:30180",
    "Realm": "cryptojackpot",
    "ClientId": "cryptojackpot-backend",
    "Audience": "account",
    "RequireHttpsMetadata": false,
    "ValidateAudience": false
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092"
  }
}
