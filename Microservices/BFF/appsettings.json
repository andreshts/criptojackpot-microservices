{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "JwtSettings": {
    "Issuer": "CryptoJackpot",
    "Audience": "CryptoJackpotAPI",
    "SecretKey": ""
  },
  
  "CookieSettings": {
    "AccessTokenCookieName": "access_token",
    "RefreshTokenCookieName": "refresh_token"
  },
  
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080"
    ]
  },
  
  "ReverseProxy": {
    "Routes": {
      "identity-auth-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v1/auth/{**remainder}"
        }
      },
      "identity-users-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v1/users/{**remainder}"
        }
      },
      "identity-roles-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v1/roles/{**remainder}"
        }
      },
      "identity-countries-route": {
        "ClusterId": "identity-cluster",
        "Match": {
          "Path": "/api/v1/countries/{**remainder}"
        }
      },
      "lottery-route": {
        "ClusterId": "lottery-cluster",
        "Match": {
          "Path": "/api/v1/lotteries/{**remainder}"
        }
      },
      "lottery-hub-route": {
        "ClusterId": "lottery-cluster",
        "Match": {
          "Path": "/lottery-hub/{**remainder}"
        }
      },
      "order-orders-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/v1/orders/{**remainder}"
        }
      },
      "order-tickets-route": {
        "ClusterId": "order-cluster",
        "Match": {
          "Path": "/api/v1/tickets/{**remainder}"
        }
      },
      "wallet-wallets-route": {
        "ClusterId": "wallet-cluster",
        "Match": {
          "Path": "/api/v1/wallets/{**remainder}"
        }
      },
      "wallet-transactions-route": {
        "ClusterId": "wallet-cluster",
        "Match": {
          "Path": "/api/v1/transactions/{**remainder}"
        }
      },
      "winner-route": {
        "ClusterId": "winner-cluster",
        "Match": {
          "Path": "/api/v1/winners/{**remainder}"
        }
      },
      "notification-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/api/v1/notifications/{**remainder}"
        }
      },
      "audit-route": {
        "ClusterId": "audit-cluster",
        "Match": {
          "Path": "/api/v1/audit/{**remainder}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "default": {
            "Address": "http://identity-api.cryptojackpot.svc.cluster.local"
          }
        },
        "HttpClient": {
          "RequestHeaderEncoding": "Latin1"
        }
      },
      "lottery-cluster": {
        "Destinations": {
          "default": {
            "Address": "http://lottery-api.cryptojackpot.svc.cluster.local"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "default": {
            "Address": "http://order-api.cryptojackpot.svc.cluster.local"
          }
        }
      },
      "wallet-cluster": {
        "Destinations": {
          "default": {
            "Address": "http://wallet-api.cryptojackpot.svc.cluster.local"
          }
        }
      },
      "winner-cluster": {
        "Destinations": {
          "default": {
            "Address": "http://winner-api.cryptojackpot.svc.cluster.local"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "default": {
            "Address": "http://notification-api.cryptojackpot.svc.cluster.local"
          }
        }
      },
      "audit-cluster": {
        "Destinations": {
          "default": {
            "Address": "http://audit-api.cryptojackpot.svc.cluster.local"
          }
        }
      }
    }
  }
}

