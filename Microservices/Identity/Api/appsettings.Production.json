{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DataProtection": {
    "ApplicationName": "CryptoJackpot.Identity",
    "RedisKeyName": "CryptoJackpot:DataProtection-Keys",
    "KeyLifetimeDays": 90
  },
  "JwtSettings": {
    "ExpirationInMinutes": 15
  },
  "CookieSettings": {
    "Domain": ".cryptojackpot.com",
    "SecureOnly": true,
    "SameSite": "Strict",
    "AccessTokenCookieName": "__Secure-access_token",
    "RefreshTokenCookieName": "__Secure-refresh_token",
    "Path": "/"
  },
  "TwoFactor": {
    "Issuer": "CryptoJackpot",
    "ChallengeTokenMinutes": 5,
    "RecoveryCodeCount": 8
  }
}

